{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "target": "es2017",
    "module": "esnext",
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "./src/**/*"
  ]
}
